@model LoginDTO
@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="~/css/authorization/authorization.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<div class="tabs">
    <a class="tab" asp-area="" asp-controller="Authorization" asp-action="Login">LOGIN</a>
    <a class="tab" asp-area="" asp-controller="Authorization" asp-action="Register">REGISTER</a>
</div>

<div class="form-container">
    <form method="post" asp-area="" asp-controller="Authorization" asp-action="LoginCommand" class="form">
        <input type="text" placeholder="E-mail" asp-for="UserEmail" required>
        <span asp-validation-for="UserEmail" class="text-danger"></span>

        <input type="password" placeholder="Password" asp-for="UserPassword" required>
        <span asp-validation-for="UserPassword" class="text-danger"></span>

        <button type="submit">Login</button>
    </form>
</div>

<div class="google-btn">
    <i class="fab fa-google"></i>  Continue with  <b>Google</b>
</div>

<br />
<br />

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>