<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CozyHouse</title>

    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <link rel="stylesheet" href="~/css/Shared/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/header_footer.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><h1>Cozy House</h1></a>
            <p>Shelter for pets in Ukraine</p>
        </div>
        <div class="nav-menu">
            <ul>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="Manager" asp-controller="PetPublication" asp-action="Index">Manage Pet Publications</a></li>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="SeeRequests">Manage Requests</a></li>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="LogoutCommand">Logout</a></li>
                <li><a>@User.Identity?.Name</a></li>
            </ul>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>For questions<br>and suggestions</h3>
                <div class="contacts">
                    <a href="mailto:email@shelter.com" class="contact-item">
                        <div class="contact-icon">
                            <img src="../../img/icons/mail-icon.svg" alt="Email">
                        </div>
                        email@shelter.com
                    </a>
                    <a href="tel:+13674567754" class="contact-item">
                        <div class="contact-icon">
                            <img src="../../img/icons/phone-icon.svg" alt="Phone">
                        </div>
                        +13 674 567 75 54
                    </a>
                </div>
            </div>

            <div class="footer-column">
                <h3>We are waiting<br>for your visit</h3>
                <div class="locations">
                    <a href="https://goo.gl/maps/..." target="_blank" class="location-item">
                        <div class="location-icon">
                            <img src="../../img/icons/pin-icon.svg" alt="Location">
                        </div>
                        13 Shevchanka, Lviv<br>(entrance from the store)
                    </a>
                    <a href="https://goo.gl/maps/..." target="_blank" class="location-item">
                        <div class="location-icon">
                            <img src="../../img/icons/pin-icon.svg" alt="Location">
                        </div>
                        122 Lesi Ukrainku, Kyiv
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
