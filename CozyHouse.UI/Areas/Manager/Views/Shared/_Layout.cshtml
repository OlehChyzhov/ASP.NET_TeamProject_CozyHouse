<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CozyHouse</title>

    <link rel="stylesheet" href="~/css/Shared/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/header_footer.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><h1>Cozy House</h1></a>
            <p>Shelter for pets in Ukraine</p>
        </div>
        <div class="nav-menu">
            <ul>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="Manager" asp-controller="PetPublication" asp-action="Index">Manage Pet Publications</a></li>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="SeeRequests">Manage Requests</a></li>
                <li><a asp-area="Manager" asp-controller="Home" asp-action="LogoutCommand">Logout</a></li>
            </ul>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer id="footer">
        <div class="footer-content">
            <div class="contacts">
                <h2>For questions <br> and suggestions</h2>
                <a href="mailto:email@shelter.com">
                    <img src="/img/icon-email.svg" alt="icon-email">email@shelter.com
                </a>
                <a href="tel:+136745677554">
                    <img src="/img/icon-phone.svg" alt="icon-phone">+13 674 567 75 54
                </a>
            </div>
            <div class="locations">
                <h2>We are waiting <br> for your visit</h2>
                <a href="https://www.google.com/maps/search/13+Shevchenka,+Lviv">
                    <img src="/img/pin.svg" alt="pin">13 Shevchenka, Lviv<br> (entrance from the store)
                </a>
                <a href="https://www.google.com/maps/search/122+Lesi+Ukrainku,+Kyiv">
                    <img src="/img/pin.svg" alt="pin">122 Lesi Ukrainku, Kyiv
                </a>
            </div>
            <img src="/img/footer-puppy.png" alt="footer-puppy">
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
