@model UserPetPublication
@{
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" href="~/css/Shared/PetPublications/create_edit.css" asp-append-version="true" />

<form class="top-button">
    <button asp-area="User" asp-controller="UserPublicationsManage" asp-action="Index">Back</button>
</form>

<div class="form-container">
    <form method="post" enctype="multipart/form-data" asp-area="User" asp-controller="UserPublicationsManage" asp-action="Edit" class="main-form">
        <input asp-for="OwnerId" value="@User.GetUserId()" hidden />
        <input asp-for="Id" hidden />
        <h1>Edit Pet Publication</h1>

        <h2>Publication Information</h2>
        <div>
            <input type="text" placeholder="Title" asp-for="PublicationTitle" />
        </div>
        <div>
            <textarea placeholder="Summary" asp-for="Summary"></textarea>
        </div>
        <div>
            <textarea placeholder="Description" asp-for="Description"></textarea>
        </div>
        <div>
            <input placeholder="Location" asp-for="Location" />
        </div>

        <h2>Pet Information</h2>
        <div>
            <input placeholder="Pet Name" asp-for="PetName" />
        </div>
        <div>
            <input placeholder="Pet Age" asp-for="PetAge" />
        </div>

        <div>
            <select asp-for="PetType">
                @{
                    foreach (Species species in Enum.GetValues(typeof(Species)))
                    {
                        <option value="@species">@species.ToString()</option>
                    }
                }
            </select>
        </div>
        <div>
            <input placeholder="Breed" asp-for="Breed" />
        </div>

        <div class="checkbox-with-label">
            <label for="IsVaccinated">Is Vaccinated?</label>
            <input type="checkbox" asp-for="IsVaccinated" name="IsVaccinated" />
        </div>
        <div class="checkbox-with-label">
            <label for="IsSterilized">Is Sterilized?</label>
            <input type="checkbox" asp-for="IsSterilized" name="IsSterilized" />
        </div>

        <div>
            <button type="submit">Update</button>
        </div>
    </form>
</div>