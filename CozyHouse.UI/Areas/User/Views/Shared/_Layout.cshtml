<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CozyHouse</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CozyHouse.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserListings" asp-action="Index">Manage your listings</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="Pets" asp-action="Index">Manage your pets</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="ShelterPets">View pets in shelter</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="UserPets">View pets from users</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="SeeAdoptionRequests">See Requests</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="LogoutCommand">Logout</a>
                </li>
                <li>
                    <a asp-area="User" asp-controller="UserHome" asp-action="DeleteAccount">Delete Account</a>
                </li>
            </ul>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer>
        <div>
           
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
