<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CozyHouse</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="logo">
            <a href=""><h1>Cozy House</h1></a>
            <p>Shelter for pets in Ukraine</p>
        </div>
        <div class="nav-menu">
            <ul>
                <li>
                    <a asp-area="Guest" asp-controller="GuestHome" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-area="Guest" asp-controller="Authorization" asp-action="Login">Login</a>
                </li>
                <li>
                    <a asp-area="Guest" asp-controller="Authorization" asp-action="Index">Register</a>
                </li>
                <li>
                    <a asp-area="Guest" asp-controller="OurPets" asp-action="Index">Our Pets</a>
                </li>
                <li><a href="#main.html">About the shelter</a></li>
                <li><a href="#help-container">Help the shelter</a></li>
                <li><a href="#footer">Contacts</a></li>
            </ul>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer id="footer">
        <div class="footer-content" style="background: url('./img/start-screen-gradient-background.png') no-repeat center;">
            <div class="contacts">
                <h2>For questions <br> and suggestions</h2>
                <a href="mailto:email@shelter.com"><img src="./img/icon-email.svg" alt="icon-email">email@shelter.com</a>
                <a href="tel:+136745677554"><img src="./img/icon-phone.svg" alt="icon-phone">+13 674 567 75 54</a>
            </div>
            <div class="locations">
                <h2>We are waiting <br> for your visit</h2>
                  <a <img src="./img/pin.svg" alt="pin">13 Shevchenka, Lviv<br> (entrance from the store)</a>
                  <a <img src="./img/pin.svg" alt="pin">122 Lesi Ukrainku, Kyiv </a> 
            </div>
            <img src="./img/footer-puppy.png" alt="footer-puppy">
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
